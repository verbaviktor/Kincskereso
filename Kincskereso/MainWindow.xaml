<Window x:Class="Kincskereso.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kincskereso"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="900" ResizeMode="NoResize">
    <Grid x:Name="mainGrid" Height="600" Width="900">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"></RowDefinition>
            <RowDefinition Height="62*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid x:Name="Board" Background="Black" Grid.Column="1" Grid.Row="1" Margin="50,109,50,108">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
        </Grid>
        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Center">
            <Label Grid.Column="1" Content="Erdő" HorizontalAlignment="Left" Margin="23,10,0,0" VerticalAlignment="Top"/>
            <Label Grid.Column="1" Content="Hegy" HorizontalAlignment="Left" Margin="23,10,0,0" VerticalAlignment="Top"/>
            <Label Grid.Column="1" Content="Rét" HorizontalAlignment="Left" Margin="23,10,0,0" VerticalAlignment="Top"/>
            <Label Grid.Column="1" Content="Domb" HorizontalAlignment="Left" Margin="23,10,0,0" VerticalAlignment="Top"/>
            <Label Grid.Column="1" Content="Homok" HorizontalAlignment="Left" Margin="23,10,0,0" VerticalAlignment="Top"/>
        </StackPanel>
        <Label Content="" x:Name="msg" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <Grid x:Name="controls" Grid.Column="0" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Image Source="" Grid.Row="0" Grid.Column="0"/>
            <Label Content="{Binding}" Grid.Row="0" Grid.Column="0"/>
            <Image Source="" Grid.Row="0" Grid.Column="1"/>
            <Label Content="{Binding}" Grid.Row="0" Grid.Column="1"/>
            <Image Source="" Grid.Row="0" Grid.Column="2"/>
            <Label Content="{Binding}" Grid.Row="0" Grid.Column="2"/>
            <Image Source="" Grid.Row="1" Grid.Column="0"/>
            <Label Content="{Binding}" Grid.Row="1" Grid.Column="0"/>
            <Image Source="" Grid.Row="1" Grid.Column="1"/>
            <Label Content="{Binding}" Grid.Row="1" Grid.Column="1"/>
            <Image Source="" Grid.Row="2" Grid.Column="0"/>
            <Label Content="{Binding}" Grid.Row="2" Grid.Column="0"/>
            <Image Source="" Grid.Row="0" Grid.Column="0"/>
            <Label Content="Lépések" Grid.Row="2" Grid.Column="1"/>
            <Label Content="{Binding}" Grid.Row="2" Grid.Column="1"/>
            <Button x:Name="dice" Click="dice" Grid.Row="2" Grid.Column="2">
                <Image Source=""/>
            </Button>
        </Grid>
    </Grid>
</Window>
